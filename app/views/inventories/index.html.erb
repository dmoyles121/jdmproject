<p id="notice"><%= notice %></p>

<h1>Listing Inventories</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Colour</th>
      <th>Cost</th>
      <th>Quantity</th>
      <th>Image url</th>
      <th>Description</th>
      <th>Title</th>
      <th>Category</th>
      <th>MakePublic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.brand %></td>
        <td><%= inventory.colour %></td>
        <td><%= inventory.cost %></td>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.image_url %></td>
        <td><%= inventory.description %></td>
        <td><%= inventory.title %></td>
        <td><%= inventory.PublicVisible %> </td>
        <td><%= inventory.category %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

